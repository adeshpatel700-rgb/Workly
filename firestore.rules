rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ğŸ‘¤ Users Collection
    // Allow users to read their own data and all other users can read basic info
    match /users/{userId} {
      // Users can read their own data
      allow read: if request.auth != null && request.auth.uid == userId;
      // Users can write their own data
      allow write: if request.auth != null && request.auth.uid == userId;
      // Allow others to read basic info (for displaying member names)
      allow read: if request.auth != null;
    }

    // ğŸ¢ Workplaces Collection
    match /workplaces/{workplaceId} {
      // Anyone authenticated can read workplaces (to join by ID)
      allow read: if request.auth != null;
      
      // Any authenticated user can create a workplace
      allow create: if request.auth != null;
      
      // Members can update workplace data
      allow update: if request.auth != null;

      // ğŸ“‹ Tasks Subcollection
      match /tasks/{taskId} {
        // All authenticated users can read, write, update, delete tasks
        allow read, write: if request.auth != null;
      }
    }
  }
}
